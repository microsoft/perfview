<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;net8.0</TargetFrameworks>
    <RootNamespace>TraceParserGen.Tests</RootNamespace>
    <AssemblyName>TraceParserGen.Tests</AssemblyName>
    <Description>Unit tests for TraceParserGen.</Description>
    <Copyright>Copyright Â© Microsoft 2024</Copyright>

    <!-- Test projects can automatically generate the necessary binding redirects -->
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" />
    <PackageReference Include="xunit.runner.visualstudio" PrivateAssets="all" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TraceEvent\TraceEvent.csproj" />
    <ProjectReference Include="..\TraceParserGen\TraceParserGen.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="inputs\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Copy TraceParserGen.exe to the output directory after build -->
  <Target Name="CopyTraceParserGen" AfterTargets="Build">
    <ItemGroup>
      <TraceParserGenExe Include="..\TraceParserGen\bin\$(Configuration)\net462\TraceParserGen.exe" />
    </ItemGroup>
    <Copy SourceFiles="@(TraceParserGenExe)" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup>
    <Service Include="{82a7f48d-3b50-4b1e-b82e-3ada8210c358}" />
  </ItemGroup>

  <PropertyGroup>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

</Project>
